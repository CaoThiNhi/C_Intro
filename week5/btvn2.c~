#include <stdio.h>

int main()
{
	int a,b,c,max,tong;
	printf("Nhap gia tri a:");
	scanf("%d\n", &a);
	printf("Nhap gia tri b:");
	scanf("%d\n", &b);
	printf("Nhap gia tri c:");
	scanf("%d\n", &c);

	max = a>b? a:b;
	max = max>c? max:c;
	printf("Gia tri lon nhat trong ba so la: %d\n", max);

	(a+b+c)/3 >10? printf("Tong 2 so dau: a+b = %d\n", a+b): printf("Tong 2 so cuoi: b+c = %d\n", b+c);

	return 0;
}
